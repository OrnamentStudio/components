.c-progressive_image
  overflow: hidden
  position: relative
  display: inline-block

  &.is-ready
    .c-progressive_image-image
      opacity: 1
    .c-progressive_image-preview
      opacity: 0

.c-progressive_image-image,
.c-progressive_image-preview
  width: 100%
  height: 100%
  position: absolute
  top: 0
  left: 0

  background-repeat: no-repeat
  background-position: center center
  background-size: cover

.c-progressive_image-image
  opacity: 0
.c-progressive_image-preview
  opacity: 1
